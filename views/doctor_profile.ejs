<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Doctor Profile</title>
    <style>
        input{
            display: block;
            margin-bottom: 8px;
            width: 500px;
        }
    </style>
    <script>
        const url = "/doctor/account/information";
        fetch(url)
        .then(data=>{return data.json()})
        .then(res=>{
            let firstName = document.getElementById("first_name");
            let lastName = document.getElementById("last_name");
            let specialty = document.getElementById("specialty");
            let email = document.getElementById("email");
            let wilayaInput = document.getElementById("wilaya_inp");
            let address = document.getElementById("address_inp");
            let contact = document.getElementById("contact_inp");
            let avgTime = document.getElementById("avg_inp");
            let workingStatus = document.getElementById("status_inp");
            let workingDaysContainer = document.getElementById("working_days_ul");
            firstName.innerHTML=res.first_name;
            lastName.innerHTML = res.last_name;
            specialty.innerHTML = res.specialty;
            email.innerHTML = res.email;
            wilayaInput.value = res.wilaya;
            address.value = res.address;
            contact.value = res.contact_num;
            avgTime.value = res.avg_time;
            workingStatus.value = res.working_status;
            res.working_days.forEach(day => {
                var li = document.createElement("li");
                var p1 = document.createElement("p");
                var p2 = document.createElement("input");
                var p3 = document.createElement("input");
                var updateBtn = document.createElement("button");
                var deleteBtn = document.createElement("button");
                p1.innerHTML = day.day;
                p2.value = day.start;
                p3.value = day.finish;
                updateBtn.innerHTML = "Update";
                deleteBtn.innerHTML = "delete";
                deleteBtn.onclick = ()=>{
                    console.log("delete "+day.day);
                };
                updateBtn.onclick = ()=>{
                    console.log("update "+day.day);
                };
                li.appendChild(p1);
                li.appendChild(p2);
                li.appendChild(p3);
                li.appendChild(updateBtn);
                li.appendChild(deleteBtn);
                workingDaysContainer.appendChild(li);
            });
            
        });
        function updateClinic(){
            console.log("update clinic on click");
            let wilaya = document.getElementById("wilaya_inp").value;
            let address = document.getElementById("address_inp").value;
            let contact_num = document.getElementById("contact_inp").value;
            let avg_time = document.getElementById("avg_inp").value;
            let working_status = document.getElementById("status_inp").value;
            var data={
                wilaya,
                address,
                contact_num,
                avg_time,
                working_status
            }
            var param = {
                headers:{
                    "content-type":"application/json; charset=UTF-8"
                },
                body:data,
                method:"POST"
            };
            fetch("/doctor/clinic",param)
            .then(data=>{return data.json})
            .then(res=>{
                console.log(res);
            });
        }

    </script>
</head>
<body>
    <div>
        <h1>Profile</h1>
        <p id="first_name">first_name </p>
        <p id="last_name">last_name </p>
        <p id="specialty">specialty</p>
        <p id="email">email</p>
        <form action="/doctor/password" method="post">
            <input name="old_pass" type="text" placeholder="old password" required>
            <input name="new_pass" type="text" placeholder="new password" required>
            <input type="submit">
        </form>
        <hr>

        <h1>Clinic Info</h1>
        <form action="/doctor/clinic" method="post">
            <label for="wilaya">Wilaya</label>
            <input id="wilaya_inp" name="wilaya" type="text"  required>
            
            <label for="address">Address</label>
            <input id="address_inp" name="address" type="text" required>
            
            <label for="contact_num">Contact num </label>
            <input id="contact_inp" name="contact_num" type="text" required>
            
            <label for="avg_time">Average Session Time</label>
            <input id="avg_inp" name="avg_time" type="text" required>
            
            <label for="working_status">Working status</label>
            <input id="status_inp" name="working_status" type="text" required>
            <input type="submit">
        </form>
        
        <hr>

        <h1>Working days</h1>
        <form action="/doctor/workingdays" method="post">
            <input type="text" placeholder="day">
            <input type="text" placeholder="start time">
            <input type="text" placeholder="end time">
            <input type="submit">
        </form>
        <ul id="working_days_ul">
           
        </ul>
    </div>
    
</body>
</html>