        <div class="page-wrapper">
            <div class="content">
                <div class="row">
                    <div class="col-sm-12">
                        <h4 class="page-title">Edit Schedule</h4>
                    </div>
                </div>
                <form action="/doctor/workingdays/add" method="post">
                   
                    <div class="card-box">
                        <h3 class="card-title">Working days</h3>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group form-focus select-focus">
                                    <label class="focus-label">Day</label>
                                    <select class="select form-control floating" name="day_id" size="1">
                                        <option value="1">Sunday</option>
                                        <option value="2">Monday</option>
                                        <option value="3">Tuesday</option>
                                        <option value="4">Wednsday</option>
                                        <option value="5">Thursday</option>
                                        <option value="6">Friday</option>
                                        <option value="7">Saturday</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group form-focus">
                                    <label class="focus-label">start time</label>
									<input name="start" type="time" class="form-control floating" value="">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group form-focus">
                                    <label class="focus-label">End time</label>
									<input name="finish" type="time" class="form-control floating" value="">
                                </div>
                            </div>
                        </div>
                        <div class="text-left m-t-10">
                            <button class="btn btn-primary submit-btn" type="submit">Ajouter</button>
                        </div>
                    </div>
                </form>
                <div class="card-box">
                    <table class="table">
                        <thead>
                          <tr>
                            <th scope="col">Day</th>
                            <th scope="col">Start</th>
                            <th scope="col">Finish</th>
                            <th scope="col">Actions</th>
                          </tr>
                        </thead>
                        <tbody class="table-group-divider">
                            <% days.forEach(function(workingDay) { %>
                                <tr>
                                    <td> <%= workingDay.day %> </td>
                                    <td> <%= workingDay.start %> </td>
                                    <td> <%= workingDay.finish %> </td>
                                    <td>
                                        <a href="/doctor/workingdays/update/<%= workingDay.day_id %>">update</a>
                                        <a href="/doctor/workingdays/delete/<%= workingDay.day_id %>">delete</a>
                                    </td>
                                </tr>
                                
                            <% }); %>
                          
                        </tbody>
                    </table>
                </div>
                
            </div>
